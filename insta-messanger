  }
  #messageInput {
    flex: 1;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  #sendButton {
    padding: 10px 20px;
    margin-left: 10px;
    background-color: #4CAF50;
